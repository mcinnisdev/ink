{% macro pricingTable(plans) %}
<div class="pricing-table">
  {% for plan in plans %}
  <div class="pricing-card{% if plan.featured %} pricing-card--featured{% endif %}">
    {% if plan.badge %}
    <span class="pricing-card__badge">{{ plan.badge }}</span>
    {% endif %}
    <h3 class="pricing-card__name">{{ plan.name }}</h3>
    <div class="pricing-card__price">
      <span class="pricing-card__amount">{{ plan.price }}</span>
      {% if plan.period %}<span class="pricing-card__period">/ {{ plan.period }}</span>{% endif %}
    </div>
    {% if plan.description %}
    <p class="pricing-card__desc">{{ plan.description }}</p>
    {% endif %}
    {% if plan.features %}
    <ul class="pricing-card__features">
      {% for feature in plan.features %}
      <li>{{ feature }}</li>
      {% endfor %}
    </ul>
    {% endif %}
    <a href="{{ plan.cta_url or '/contact/' }}" class="btn {{ 'btn--primary' if plan.featured else 'btn--secondary' }}">
      {{ plan.cta_text or "Get Started" }}
    </a>
  </div>
  {% endfor %}
</div>
{% endmacro %}
