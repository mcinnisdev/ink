{% macro modalTrigger(modalId, text, className) %}
<button class="btn {{ className or 'btn--primary' }}" data-modal-open="{{ modalId }}">{{ text }}</button>
{% endmacro %}

{% macro modal(id, title, content, size) %}
<div class="modal" id="{{ id }}" role="dialog" aria-modal="true" aria-labelledby="{{ id }}-title" hidden>
  <div class="modal__overlay" data-modal-close></div>
  <div class="modal__dialog{% if size %} modal__dialog--{{ size }}{% endif %}">
    <div class="modal__header">
      <h2 class="modal__title" id="{{ id }}-title">{{ title }}</h2>
      <button class="modal__close" data-modal-close aria-label="Close dialog">&times;</button>
    </div>
    <div class="modal__body">
      {{ content | safe }}
    </div>
  </div>
</div>
{% endmacro %}
