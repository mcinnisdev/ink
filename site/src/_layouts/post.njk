---
layout: base.njk
og_type: article
---
<article class="section">
  <div class="container container--narrow">
    {# Header #}
    <header class="mb-10 pb-8 border-b border-gray-800">
      {% if post_tags %}
      <div class="flex flex-wrap gap-1.5 mb-4">
        {% for tag in post_tags | split(",") %}
        <span class="article-card__tag">{{ tag | trim }}</span>
        {% endfor %}
      </div>
      {% endif %}
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-100 mb-4">{{ title }}</h1>
      {% if excerpt %}
      <p class="text-lg text-gray-400 mb-5">{{ excerpt }}</p>
      {% endif %}
      <div class="flex items-center gap-4 text-sm text-gray-400">
        {% if date %}
        <span class="inline-flex items-center gap-1.5">
          <i data-lucide="calendar" style="width:14px;height:14px;"></i>
          <time datetime="{{ date | dateISO }}">{{ date | dateFormat }}</time>
        </span>
        {% endif %}
        {% if content %}
        <span class="inline-flex items-center gap-1.5">
          <i data-lucide="clock" style="width:14px;height:14px;"></i>
          {{ content | readingTime }}
        </span>
        {% endif %}
        {% if author %}
        <span class="inline-flex items-center gap-1.5">
          <i data-lucide="user" style="width:14px;height:14px;"></i>
          {{ author }}
        </span>
        {% endif %}
      </div>
    </header>

    {# Content #}
    <div class="detail__content prose max-w-none">
      {{ content | safe }}
    </div>

    {# Post Navigation #}
    {%- set allPosts = collections.posts %}
    {%- set currentIndex = -1 %}
    {%- for post in allPosts %}
      {%- if post.url == page.url %}{%- set currentIndex = loop.index0 %}{%- endif %}
    {%- endfor %}
    {%- if currentIndex > 0 or currentIndex < allPosts.length - 1 %}
    <nav class="post-nav" aria-label="Post navigation">
      {%- if currentIndex < allPosts.length - 1 %}
      <a href="{{ allPosts[currentIndex + 1].url }}" class="post-nav__link post-nav__link--prev">
        <span class="post-nav__label">Previous</span>
        <span class="post-nav__title">{{ allPosts[currentIndex + 1].data.title }}</span>
      </a>
      {%- else %}<span></span>{%- endif %}
      {%- if currentIndex > 0 %}
      <a href="{{ allPosts[currentIndex - 1].url }}" class="post-nav__link post-nav__link--next">
        <span class="post-nav__label">Next</span>
        <span class="post-nav__title">{{ allPosts[currentIndex - 1].data.title }}</span>
      </a>
      {%- else %}<span></span>{%- endif %}
    </nav>
    {%- endif %}
  </div>
</article>
