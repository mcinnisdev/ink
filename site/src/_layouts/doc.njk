---
layout: base.njk
og_type: article
---
<div class="section">
  <div class="container">
    <div class="docs-layout">
      <nav class="docs-sidebar" aria-label="Documentation navigation">
        <h3>Documentation</h3>
        <ul>
          {%- for doc in collections.docs %}
          <li><a href="{{ doc.url }}"{% if doc.url == page.url %} class="active" aria-current="page"{% endif %}>{{ doc.data.title }}</a></li>
          {%- endfor %}
        </ul>
      </nav>
      <article class="docs-content">
        <header class="mb-8 pb-6 border-b border-gray-800">
          <h1 class="text-3xl font-bold tracking-tight text-gray-100 mb-2">{{ title }}</h1>
          {% if excerpt %}
          <p class="text-gray-400">{{ excerpt }}</p>
          {% endif %}
        </header>
        <div class="detail__content prose max-w-none">
          {{ content | safe }}
        </div>
      </article>
    </div>
  </div>
</div>
