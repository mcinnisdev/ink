{
  "name": "ink-app",
  "version": "1.1.1",
  "private": true,
  "description": "Desktop application for Ink â€” visual editor with live preview and Git publishing.",
  "author": "mcinnisdev",
  "license": "MIT",
  "main": "./dist-electron/main/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "electron-vite build && electron-builder --publish never",
    "dist:win": "electron-vite build && electron-builder --win --publish never",
    "dist:win:publish": "electron-vite build && electron-builder --win --publish always",
    "dist:mac": "electron-vite build && electron-builder --mac --publish never",
    "dist:linux": "electron-vite build && electron-builder --linux --publish never"
  },
  "build": {
    "appId": "com.mcinnisdev.ink",
    "productName": "Ink",
    "afterPack": "./scripts/after-pack.js",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mcinnisdev",
        "repo": "ink",
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "../starter",
        "to": "starter",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!_site/**"
        ]
      },
      {
        "from": "../starter-tailwind",
        "to": "starter-tailwind",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!_site/**"
        ]
      },
      {
        "from": "../cli",
        "to": "cli",
        "filter": [
          "**/*",
          "!node_modules/**"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/ink-logo.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/ink-logo.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@codemirror/commands": "^6.10.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.15",
    "@tiptap/extension-image": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.0.0",
    "lucide-react": "^0.575.0",
    "marked": "^17.0.3",
    "openai": "^6.22.0",
    "turndown": "^7.2.2",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^31.0.0",
    "electron-builder": "^26.8.1",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.49",
    "rcedit": "^5.0.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0"
  }
}
