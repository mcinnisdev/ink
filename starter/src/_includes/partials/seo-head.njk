<title>{{ seo_title or title }} | {{ site.name }}</title>
<meta name="description" content="{{ meta_description or excerpt or site.description }}">

{# Open Graph #}
<meta property="og:title" content="{{ seo_title or title }}">
<meta property="og:description" content="{{ meta_description or excerpt or site.description }}">
<meta property="og:type" content="{{ og_type or 'website' }}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:site_name" content="{{ site.name }}">
{% if og_image or featured_image %}
<meta property="og:image" content="{{ site.url }}{{ (og_image or featured_image) | imageUrl }}">
{% endif %}

{# Twitter #}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ seo_title or title }}">
<meta name="twitter:description" content="{{ meta_description or excerpt or site.description }}">
{% if og_image or featured_image %}
<meta name="twitter:image" content="{{ site.url }}{{ (og_image or featured_image) | imageUrl }}">
{% endif %}

{# Canonical + RSS #}
<link rel="canonical" href="{{ site.url }}{{ page.url }}">
<link rel="alternate" type="application/atom+xml" title="{{ site.name }} Feed" href="{{ site.url }}/feed.xml">

{# JSON-LD: Organization (site-wide) #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ site.name }}",
  "url": "{{ site.url }}",
  "description": "{{ site.description }}"{% if site.phone %},
  "telephone": "{{ site.phone }}"{% endif %}{% if site.email %},
  "email": "{{ site.email }}"{% endif %}{% if site.address.street %},
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "{{ site.address.street }}",
    "addressLocality": "{{ site.address.city }}",
    "addressRegion": "{{ site.address.state }}",
    "postalCode": "{{ site.address.zip }}"
  }{% endif %}
}
</script>

{# JSON-LD: BreadcrumbList (non-home pages) #}
{% if page.url != "/" %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "{{ site.url }}/" },
    { "@type": "ListItem", "position": 2, "name": "{{ title }}" }
  ]
}
</script>
{% endif %}
